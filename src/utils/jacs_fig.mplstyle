# Font family and style
# font.family: sans-serif          # Main font family
font.family: Arial
font.style: normal                    # normal, italic, oblique
font.variant: normal                  # normal, small-caps
font.weight: normal                   # normal, bold, light, etc.
font.stretch: normal                  # normal, condensed,

# Font sizes for different elements
font.size: 10                          # Default font size
axes.labelsize: 10                     # Axis labels (xlabel, ylabel)
axes.titlesize: 10                     # Axis titles
xtick.labelsize: 8                    # X-axis tick labels
ytick.labelsize: 8                    # Y-axis tick labels
legend.fontsize: 8                    # Legend text

# Layout
figure.figsize: 3.33, 3                 # Default for single column
figure.facecolor:  white
figure.dpi: 300

# Control subplot spacing
figure.autolayout: False   # keep control in your code
figure.constrained_layout.use: False
figure.constrained_layout.h_pad: 0.05
figure.constrained_layout.w_pad: 0.02
figure.constrained_layout.hspace: 0.06
figure.constrained_layout.wspace: 0.06
figure.subplot.left: 0.15
figure.subplot.right: 0.95
figure.subplot.bottom: 0.15
figure.subplot.top: 0.94
figure.subplot.hspace: 0.25
figure.subplot.wspace: 0.25

# Save figure
savefig.facecolor: white
savefig.dpi: 400
savefig.bbox: tight
savefig.pad_inches: 0.02   # reduce whitespace around figure
savefig.transparent: False

# Axes
axes.edgecolor: black
axes.labelcolor: black
axes.linewidth: 1.0
axes.labelpad: 2.0
axes.xmargin: 0.05
axes.ymargin: 0.05
legend.frameon: False                   # Box around legend

# Ticks
xtick.color: black
xtick.direction: in
xtick.alignment: center
xaxis.labellocation: center
xtick.labeltop: False
xtick.major.bottom: True
xtick.major.pad: 2.0
xtick.major.size: 3
xtick.major.top: True
xtick.major.width: 0.8
xtick.minor.bottom: False
xtick.minor.pad: 2.0
xtick.minor.size: 1.5
xtick.minor.top: False
xtick.minor.visible: False
xtick.minor.width: 0.25
xtick.top: True
ytick.alignment: center
yaxis.labellocation: center
ytick.color: black
ytick.direction: in
ytick.labelleft: True
ytick.labelright: False
ytick.left: True
ytick.major.left: True
ytick.major.pad: 2.0
ytick.major.right: True
ytick.major.size: 3
ytick.major.width: 0.8
ytick.minor.left: False
ytick.minor.pad: 2.0
ytick.minor.right: False
ytick.minor.size: 1.5
ytick.minor.visible: False
ytick.minor.width: 0.25
ytick.right: True

# Lines and Markers
lines.linewidth: 1.5
lines.markersize: 6
lines.markeredgewidth: 0.8
lines.markerfacecolor: white

